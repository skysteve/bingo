{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7"
    ],
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/caller/**/*.ts",
    "src/cast_receiver/**/*.ts",
    "src/display/**/*.ts"
  ]
}
